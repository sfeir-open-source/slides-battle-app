{
	"root": true,
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"parser": "babel-eslint"
	},
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended"
	],
	"plugins": [
		"react-hooks"
	],
	"rules": {
		"indent": [4, "tab", {
			"SwitchCase": 1
		}],
		"react-hooks/rules-of-hooks": "error", // Vérifie les règles des Hooks
		"react-hooks/exhaustive-deps": "warn" // Vérifie les tableaux de dépendances
	}
}